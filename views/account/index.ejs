<main>
  <h1><%= title %></h1>

  <% const me = (res && res.locals && res.locals.accountData) || {}; %>
  <h2>Welcome, <%= me.account_firstname || (me.account_email || '').split('@')[0] %></h2>

  <p><a href="/account/update/<%= me.account_id %>">Update account information</a></p>

  <% if (me.account_type === 'Employee' || me.account_type === 'Admin') { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Go to Inventory Management</a></p>
  <% } %>
</main>
