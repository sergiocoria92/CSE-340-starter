<h1><%= title %></h1>

<form action="/account/login" method="post" class="stack">
  <label for="account_email">Email</label>
  <input
    id="account_email"
    name="account_email"
    type="email"
    required
    placeholder="Enter a valid email address"
    value="<%= typeof account_email !== 'undefined' ? account_email : '' %>"
  />

  <label for="account_password">Password</label>

  <!-- Same helper text as register -->
  <div id="loginPwdHelp" class="muted" aria-live="polite">
    Passwords must be at least 12 characters and contain at least 1 number,
    1 uppercase letter, and 1 special character.
  </div>

  <input
    id="account_password"
    name="account_password"
    type="password"
    required
    aria-describedby="loginPwdHelp"
    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    placeholder="Enter your password"
  />

  <button type="submit">Sign in</button>
</form>

