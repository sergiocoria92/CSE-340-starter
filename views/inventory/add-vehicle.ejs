<main>
  <h1>Add Vehicle</h1>

  <% if (message && message.length) { %>
    <div class="notice"><%= message %></div>
  <% } %>

  <% if (errors && errors.errors && errors.errors.length) { %>
    <div class="errors"><ul>
      <% errors.errors.forEach(e => { %><li><%= e.msg %></li><% }) %>
    </ul></div>
  <% } %>

  <form method="post" action="/inv/add-vehicle" class="form">
    <label for="inv_make">Make</label>
    <input id="inv_make" name="inv_make" required value="<%= data?.inv_make ?? '' %>">

    <label for="inv_model">Model</label>
    <input id="inv_model" name="inv_model" required value="<%= data?.inv_model ?? '' %>">

    <label for="inv_year">Year</label>
    <input id="inv_year" name="inv_year" type="number" min="1900"
           max="<%= (new Date()).getFullYear() + 1 %>" required
           value="<%= data?.inv_year ?? '' %>">

    <label for="inv_description">Description</label>
    <textarea id="inv_description" name="inv_description" required minlength="10"><%= data?.inv_description ?? '' %></textarea>

    <label for="inv_image">Image Path</label>
    <input id="inv_image" name="inv_image" required value="<%= data?.inv_image ?? '/images/vehicles/no-image.png' %>">

    <label for="inv_thumbnail">Thumbnail Path</label>
    <input id="inv_thumbnail" name="inv_thumbnail" required value="<%= data?.inv_thumbnail ?? '/images/vehicles/no-image-tn.png' %>">

    <label for="inv_price">Price</label>
    <input id="inv_price" name="inv_price" type="number" step="0.01" min="0.01" required value="<%= data?.inv_price ?? '' %>">

    <label for="inv_miles">Miles (optional)</label>
    <input id="inv_miles" name="inv_miles" type="number" min="0" value="<%= data?.inv_miles ?? '' %>">

    <label for="inv_color">Color</label>
    <input id="inv_color" name="inv_color" required value="<%= data?.inv_color ?? '' %>">

    <label for="classificationList">Classification</label>
    <%- classificationList %>

    <button type="submit">Save</button>
  </form>
</main>
