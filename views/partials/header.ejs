<% const isLogged = Boolean(loggedin); const u = (res && res.locals && res.locals.accountData) || {}; %>
<div class="account-controls">
  <% if (isLogged) { %>
    <a class="account-link" href="/account" aria-label="Account">
      Welcome <%= (u.account_firstname || u.account_email || '').toLowerCase() %>
    </a>
    <a class="account-link" href="/account/logout" aria-label="Logout">Logout</a>
  <% } else { %>
    <a class="account-link" href="/account/login" aria-label="Login">My Account</a>
    <a class="account-link" href="/account/register" aria-label="Register">Register</a>
  <% } %>
</div>
